{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "*.config.*"
  ],
  "exclude": [
    "dist"
  ]
}
